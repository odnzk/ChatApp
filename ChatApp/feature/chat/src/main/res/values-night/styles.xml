<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="ChannelTopicTitleTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@color/dark_nero</item>
        <item name="android:padding">@dimen/paddings_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/gray80</item>
        <item name="android:textAppearance">@style/TextAppearance.Messenger.Title.Small</item>
    </style>

    <style name="MessageDateChip" parent="ShapeAppearanceOverlay.Material3.Chip">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray80</item>
        <item name="chipBackgroundColor">@color/black07</item>
    </style>

    <style name="ChannelTopicTextView" parent="Widget.AppCompat.TextView">
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
        <item name="android:textColor">@color/gray57</item>
        <item name="android:textAppearance">@style/TextAppearance.Messenger.Body.Small</item>
    </style>

    <style name="ChannelTopicItem">
        <item name="android:padding">4dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@color/black07</item>
    </style>

    <style name="ChannelTopicAutoCompleteTextView" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="android:background">@color/darkest_nero</item>
        <item name="android:hint">@string/hint_channel_topic</item>
        <item name="maxLines">1</item>
        <item name="android:padding">@dimen/margin_medium</item>
        <item name="android:textAppearance">@style/TextAppearance.Messenger.Body.Small</item>
    </style>

</resources>
