<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ChannelTopicTitleTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/paddings_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.Messenger.Title.Small</item>
    </style>

    <style name="ChatBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ChatBottomSheetStyle</item>
    </style>

    <style name="ChatBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/white</item>
    </style>

    <style name="BottomSheetHelperView" parent="">
        <item name="android:layout_height">8dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:background">@drawable/bottom_sheet_helper_view_bg</item>
    </style>

    <style name="MessageDateChip" parent="ShapeAppearanceOverlay.Material3.Chip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray80</item>
        <item name="chipBackgroundColor">@color/navy_light</item>
    </style>


</resources>
