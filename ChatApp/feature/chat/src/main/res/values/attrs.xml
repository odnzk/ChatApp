<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="EmojiView">
        <attr name="emoji" format="string" />
        <attr name="emoji_count" format="integer" />
        <attr name="emoji_padding" format="dimension" />
    </declare-styleable>

    <declare-styleable name="MessageView">
        <attr name="maxWidthPercent" format="float" />
        <attr name="meMessageColor" format="color" />
        <attr name="messageTextColor" format="color" />
        <attr name="otherUserMessageColor" format="color" />
    </declare-styleable>

    <declare-styleable name="InputView">
        <attr name="singleLine" format="boolean" />
        <attr name="maxLength" format="integer" />
        <attr name="hint" format="string" />
        <attr name="viewBackgroundColor" format="reference" />
    </declare-styleable>
</resources>
