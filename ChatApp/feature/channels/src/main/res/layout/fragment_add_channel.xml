<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin_medium"
    android:theme="@style/Theme.ChatApp">

    <View
        style="@style/BottomSheetHelperView"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_small" />

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/fragment_add_channel_pb_loading"
        style="@style/PrimarySmallProgressBar"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="@dimen/margin_medium" />

    <TextView
        android:id="@+id/fragment_add_channel_tv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_small"
        android:gravity="center"
        tools:text="@string/error_channel_already_exists"
        tools:textColor="@color/romegranate" />

    <com.study.components.view.InputView
        android:id="@+id/fragment_add_channel_input_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        app:hint="@string/hint_channel_title"
        app:maxLength="50"
        app:singleLine="true"
        app:viewBackgroundColor="@android:color/transparent" />

</LinearLayout>
