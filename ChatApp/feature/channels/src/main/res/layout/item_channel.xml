<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_channel_tv_channel_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingVertical="12dp"
        android:textAppearance="@style/TextAppearance.Messenger.Title.Small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="#general" />

    <ImageView
        android:id="@+id/item_channel_iv_btn_show_topics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/item_channel_iv_show_topics_content_description"
        android:src="@drawable/ic_baseline_more_24"
        app:layout_constraintBottom_toBottomOf="@id/item_channel_tv_channel_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_channel_tv_channel_name" />

</androidx.constraintlayout.widget.ConstraintLayout>
