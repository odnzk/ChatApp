<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/fragment_channels_holder_tab_layout_channels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkest_nero"
        android:paddingHorizontal="8dp"
        android:paddingBottom="24dp"
        app:tabTextAppearance="@style/TextAppearance.Messenger.Title" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/fragment_channels_holder_view_pager_channels"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
