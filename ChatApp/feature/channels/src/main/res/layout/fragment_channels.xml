<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Messenger">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_rv_data_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.study.components.view.ScreenStateView
        android:id="@+id/screen_state_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fragment_channels_btn_add_channel"
        style="@style/ButtonAddChannel"
        android:layout_width="@dimen/primary_round_button_size"
        android:layout_height="@dimen/primary_round_button_size"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/margin_medium"
        android:contentDescription="@string/content_description_btn_add_channel" />
</FrameLayout>
