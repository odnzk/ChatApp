<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="2dp"
    tools:background="@color/background_color"
    tools:parentTag="com.study.tinkoff.core.ui.views.MessageView">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/view_message_iv_avatar"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginHorizontal="9dp"
        android:src="@mipmap/ic_launcher"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Circle" />

    <TextView
        android:id="@+id/view_message_tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/message_view_default_margin_horizontal"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.Messenger.Body.Large"
        tools:text="@string/_test_message_sender" />

    <TextView
        android:id="@+id/view_message_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/message_view_default_margin_horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:textAppearance="@style/TextAppearance.Messenger.Body"
        tools:text="@string/_test_message_content" />


    <com.study.tinkoff.core.ui.views.FlexBoxLayout
        android:id="@+id/view_message_fl_emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="5dp"
        app:item_spacing="2"
        app:line_spacing="4" />
</merge>
