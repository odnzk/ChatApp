<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.Messenger.Body.Small</item>
        <item name="cornerRadius">@dimen/primary_button_corner_radius</item>
    </style>

    <style name="PrimaryTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/text_input_layout_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/text_input_layout_corner_radius</item>
        <item name="boxBackgroundColor">@color/light_gray</item>
        <item name="boxCornerRadiusTopEnd">@dimen/text_input_layout_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/text_input_layout_corner_radius</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="SearchToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="minHeight">?android:attr/actionBarSize</item>
    </style>

    <style name="PrimaryBottomNavigationMenu">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/dark_bnv_item_color_selector</item>
        <item name="itemTextColor">@color/dark_bnv_item_color_selector</item>
    </style>

    <style name="BaseBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BaseBottomSheetStyle</item>
    </style>

    <style name="BaseBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/white</item>
    </style>

    <style name="PrimaryCircleButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">@dimen/primary_round_button_size</item>
        <item name="android:layout_height">@dimen/primary_round_button_size</item>
        <item name="android:background">@drawable/shape_circle</item>
    </style>

    <style name="PrimarySmallProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="progressBarStyle">?android:attr/progressBarStyleLarge</item>
        <item name="android:indeterminateTint">@color/purple_light</item>
        <item name="android:indeterminate">true</item>
    </style>

</resources>
