<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ChannelTopicItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_topic_separator_title"
        style="@style/ChannelTopicTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".2"
        app:layout_constraintEnd_toStartOf="@id/item_topic_separator_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Test" />

    <TextView
        android:id="@+id/item_topic_separator_date"
        style="@style/ChannelTopicTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="18 mar" />
</androidx.constraintlayout.widget.ConstraintLayout>
