<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ChannelTopicTitleTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/paddings_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.ChatApp.Title.Small</item>
    </style>

    <style name="MessageDateChip" parent="ShapeAppearanceOverlay.Material3.Chip">
        <item name="android:textColor">@color/purple_light</item>
    </style>

    <style name="ChannelTopicTextView" parent="Widget.AppCompat.TextView">
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
        <item name="android:textColor">@color/darkest_nero</item>
        <item name="android:textAppearance">@style/TextAppearance.ChatApp.Body.Small</item>
    </style>

    <style name="ChannelTopicAutoCompleteTextView" parent="ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox">
        <item name="android:hint">@string/hint_channel_topic</item>
        <item name="maxLines">1</item>
        <item name="android:completionThreshold">1</item>
        <item name="android:padding">@dimen/margin_medium</item>
        <item name="android:textAppearance">@style/TextAppearance.ChatApp.Body.Small</item>
    </style>

    <style name="ChannelTopicItem">
        <item name="android:padding">4dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@color/purple_light</item>
    </style>

    <style name="ActionTextView">
        <item name="android:drawablePadding">6dp</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:drawableTint">@color/black07</item>
        <item name="android:textColor">@color/black07</item>
        <item name="android:textAppearance">@style/TextAppearance.ChatApp.Body</item>
    </style>

    <style name="ShapeAppearanceOverlay.ImageView.RoundCorners.Message" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/view_message_corners_radius</item>
    </style>

</resources>
