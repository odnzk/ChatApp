<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ProfileToolbar">
        <item name="android:layout_height">?android:actionBarSize</item>
        <item name="android:background">@color/darkest_nero</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.ChatApp.Title</item>
    </style>

    <style name="NavigateBackToolbarButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">?android:actionBarSize</item>
        <item name="android:tint">@color/white</item>
        <item name="android:src">?attr/homeAsUpIndicator</item>
    </style>
    
</resources>
